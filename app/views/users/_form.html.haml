= form_for @user do |form|
    .form-group
        = form.label :name, t('users.index.first_name')
        = form.text_field :first_name, class: 'form-control'
        = form.label :name, t('users.index.last_name')
        = form.text_field :last_name, class: 'form-control'
        = form.label :name, t('users.index.email')
        = form.text_field :email, class: 'form-control'
        = form.label :name, t('users.index.department')
        = form.collection_select :department_id, Department.order(:name), :id, :name
        
    = form.submit value: t('users.edit.submit')
%a.btn.btn-default{ href: users_path }= t('users.show.back_to_list')