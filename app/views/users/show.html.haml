%p.show_headline= "#{t('users.show.headline')}:  #{@user.full_name}"

%table.table.table-primary.detail_table.mt-5
  %tbody

    %tr
      %td= t('users.show.whole_name')
      %td= @user.first_name + ' ' + @user.last_name

    %tr
      %td= t('users.show.email')
      %td= @user.email

    %tr
      %td= t('users.show.department')
      %td= @user.department.name

    %tr
      %td= t('users.show.type')
      %td= @user.user_type.name

    %tr
      %td= t('users.show.last_sign_in')
      %td= @user&.last_sign_in_at&.getlocal

    %tr
      %td= t('users.show.is_user_discarded')
      %td= @user&.is_discarded

    %tr
      %td= t('users.show.invitation_sent')
      %td= @user&.invitation_sent_at&.getlocal

    %tr
      %td= t('users.show.invitation_accepted')
      %td= @user&.invitation_accepted_at&.getlocal

%br

.btn.back_button.mt-5 
  = link_to t('users.show.back_to_list'), users_path, class: 'btn'

-if can?(:edit, current_user)
  .btn.index_button_edit.mt-5
    = link_to t('users.edit.edit_user'), edit_user_path(params[:id]), class: 'btn'
