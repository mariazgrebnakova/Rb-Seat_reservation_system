%table.table.table-bordered.table-primary.table-striped.table-center
    %thead.table-dark
        %tr
            %th= 'Seat code'
            %th= 'Reserved by'
            %th= 'From'
            %th= 'To'
            %th
            %th
            %th
    %tbody
        - @reservations.each do |reservation|
            %tr
                %td= reservation.seat&.name 
                %td= "#{reservation.user&.first_name} #{reservation.user&.last_name}"
                %td= reservation.from
                %td= reservation.to
                %td
                    %a{ href: reservation_path(reservation), target:'_blank', class: 'btn btn-info' }= 'Detail'
                %td
                    - if current_user.is_admin?
                        %a{ href: reservation_path(reservation), data: { method: :delete }, class:'btn btn-danger'}= 'Delete'
                    - if reservation.user_id == current_user.id
                        %a{ href: reservation_path(reservation), data: { method: :delete }, class:'btn btn-danger'}= 'Delete'
                %td
                    - if current_user.is_admin?
                        %a{ href: edit_reservation_path(reservation), class:'btn btn-success'}= 'Edit'
                    - if reservation.user_id == current_user.id
                        %a{ href: edit_reservation_path(reservation), class:'btn btn-success'}= 'Edit'

