= form_for @reservation do |form|
    .form-group
        - if current_user.is_admin?
            = form.label :name, 'Name'
            = form.collection_select :user_id, User.order(:first_name), :id, :first_name
            %br
            %br
        - if not current_user.is_admin?
            = form.label :name, 'Name'
            = form.collection_select :user_id, User.where(id: current_user.id).order(:first_name), :id, :first_name
            %br
            %br
        = form.label :name, 'Seat'
        = form.collection_select :seat_id, Seat.where(department_id: current_user.department_id).order(:name), :id, :name
        %br
        = form.label :name, t('reservations.form.date_from')
        = form.date_field :from
        = form.label :name, t('reservations.form.date_to')
        = form.date_field :to


    = form.submit
%a.btn.btn-default{ href: reservations_path }= 'Back to list'


