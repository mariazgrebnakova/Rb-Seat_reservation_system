= form_for @seat do |form|
    .form-group
        = form.label :name, 'Seat name'
        = form.text_field :name, class: 'form-control'
        = form.label :name, 'Department'
        = form.collection_select :department_id, Department.order(:name), :id, :name

    = form.submit
%a.btn.btn-default{ href: seats_path }= 'Back to list'